<% if @authentications %>
  <% unless @authentications.empty? %>
    <div id="currentservices">
      <h3>You are signed in with these services:</h3>
      <div class="authentications">
        <% for authentication in @authentications %>
          <div class="authentication">
            <%= image_tag "#{authentication.provider}_32.png", :size => "32x32" %>
            <div class="provider"><%= authentication.provider_name %></div>
            <%= link_to "X", authentication, :confirm => 'Are you sure you want to remove this authentication option?', :method => :delete, :class => "remove" %>
          </div>
        <% end %>
        <div class="clear"></div>
      </div>
    </div>
  <% end %>
  <div id="signinwith">
    <h3>Add another service to sign in with:</h3>
<% else %>
  <div id="signinwith">
    <h3>Sign in through one of these services:</h3>
<% end %>
<!-- <a href="/auth/twitter" class="auth_provider">
  <%= image_tag "twitter_64.png", :size => "64x64", :alt => "Twitter" %>
  Twitter
</a> -->
  <a href="/auth/facebook" class="auth_provider">
    <%= image_tag "facebook_64.png", :size => "64x64", :alt => "Facebook" %>
    Facebook
  </a>
  <a href="/auth/google_apps" class="auth_provider">
    <%= image_tag "google_apps_64.png", :size => "64x64", :alt => "Google" %>
    Google
  </a>
  <a href="/auth/open_id" class="auth_provider">
    <%= image_tag "open_id_64.png", :size => "64x64", :alt => "OpenID" %>
    OpenID
  </a>
  <a href="<%= CASClient::Frameworks::Rails::Filter.login_url(controller) %>" class="auth_provider">
    <%= image_tag "relay.png", :size => "64x64", :alt => "Relay" %>
    Relay
  </a>
  <div class="clear"></div>
</div>


